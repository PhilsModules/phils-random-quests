<div class="standard-form">

    <!-- Theme Selector -->
    <div class="form-group">
        <label><i class="fas fa-mask"></i> {{localize "PRQ.App.GenreLabel"}}</label>
        <div class="form-fields">
            <select id="prq-genre-select" name="genre">
                {{#each genres}}
                <option value="{{this.key}}" {{#if this.isSelected}}selected{{/if}}>{{localize this.label}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <hr>

    <!-- Live Preview (Italicized & Boxed) -->
    <div
        style="background: rgba(0, 0, 0, 0.2); border: 1px solid #7a7971; padding: 15px; border-radius: 4px; font-style: italic; margin-bottom: 10px; color: #f0f0e0; font-size: 1.5em; line-height: 1.4; text-align: center;">
        {{{previewHtml}}}
    </div>

    <!-- Item List -->
    <div class="flexcol" style="gap: 5px;">
        {{#each items}}
        {{#unless this.isHidden}}
        <div class="form-group rq-preview-item" data-index="{{@index}}" data-source="{{this.source}}">
            <div class="flexrow" style="align-items: center;">
                <!-- Reroll Button -->
                <button type="button" class="rq-reroll" data-action="reroll" style="flex: 0 0 24px; margin-right: 5px;"
                    title="{{localize 'PRQ.App.RerollOne'}}">
                    <i class="fas fa-sync"></i>
                </button>

                <!-- Label & Text -->
                <div style="flex: 1;">
                    <label style="font-weight: bold;">{{this.label}}</label>
                    <span style="display: block; font-size: 0.9em;">{{{this.text}}}</span>
                </div>

                <!-- Checkbox -->
                <div style="flex: 0 0 20px;">
                    <input type="checkbox" class="rq-include-checkbox" {{#if this.isSelected}}checked{{/if}}
                        title="{{localize 'PRQ.App.Include'}}">
                </div>
            </div>
        </div>
        {{/unless}}
        {{/each}}
    </div>

    <hr>

    <footer class="sheet-footer flexrow">
        <button type="button" data-action="generate">
            <i class="fas fa-dice-d20"></i> {{localize "PRQ.App.RerollAll"}}
        </button>
        <button type="button" data-action="post">
            <i class="fas fa-comment"></i> {{localize "PRQ.App.Post"}}
        </button>
    </footer>
</div>